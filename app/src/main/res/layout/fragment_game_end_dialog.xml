<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.reversi.GameEndDialogFragment">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <!-- TODO: Update blank fragment layout -->
        <ImageView

            android:id="@+id/winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/tvEndGameMessage" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="WINS"
            android:textSize="@android:dimen/app_icon_size" />
    </LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">
        <Button
            android:id="@+id/btnRetry"
            android:text="Restart"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
